extend layout 

block content 
  h1= title 

  form(method='POST' action='')
    div.mb-3
      label.form-label(for='secret') Secret passcode 
      input#secret.form-control(type='password' placeholder='Enter secret passcode' required='true' name='secret')

    button.btn.btn-primary(type='submit') Submit 

    if errors 
      ul(style='margin-top: 1rem; color: red')
        for error in errors
          li!= error.message || error.msg

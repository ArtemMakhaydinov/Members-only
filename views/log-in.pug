extend layout 

block content 
  h1= title 

  form(method='POST', action='')
    div.mb-3
      label.form-label(for='username') Name
      input#username.form-control(type='text' placeholder='Enter your name' name='username' required='true' value=(undefined===user ? '' : user.username))

    div.mb-3
      label.form-label(for='password') Password
      input#password.form-control(type='password' placeholder='Enter password' name='password' required='true' value='')

    button.btn.btn-primary(type='submit') Submit

    if errors
      ul(style='margin-top: 1rem; color: red')
        for error in errors
          li!= error.message || error.msg
